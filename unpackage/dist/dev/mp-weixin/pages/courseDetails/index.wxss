page {
  background-color: #f5f5f5;
}
.question-box {
  border-radius: 12rpx;
  width: 500rpx;
  padding: 40rpx;
}
.question-box .question {
  margin-top: 30rpx;
}
.question-box .question-button {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
}
.question-box .question-button button {
  width: 200rpx;
}
.question-box .title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.question-box .u-input {
  margin-top: 20rpx;
  background-color: #F0F0F0;
}
button::after {
  border: none;
  background-color: none;
}
.footer {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 20rpx;
  background-color: #fff;
  justify-content: center;
  font-size: 24rpx;
}
.footer .other {
  display: block;
  font-size: 24rpx;
  width: 15%;
  text-align: center;
  background-color: none;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 0px;
  padding-right: 0px;
  box-sizing: border-box;
  text-align: center;
  text-decoration: none;
  line-height: 1.35;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000000;
  background-color: #fff;
}
.footer .other .img-box {
  margin: 0 auto;
  width: 40rpx;
  height: 37rpx;
}
.footer .text-desc {
  text-align: center;
}
.footer .text-desc .hd {
  font-size: 30rpx;
}
.footer .text-desc .test {
  color: #999999;
  font-size: 22rpx;
}
.footer .sbBtn {
  margin-left: 20rpx;
  width: 278rpx;
  height: 74rpx;
  line-height: 74rpx;
  background: #106DF7;
  border-radius: 14rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
}
.courseDetails .content {
  margin-top: 20rpx;
  padding-bottom: 130rpx;
}
.courseDetails .content .wrap {
  background-color: white;
  padding: 20rpx;
}
.courseDetails .header .hdeader {
  background-color: #fff;
  padding: 25rpx;
}
.courseDetails .header .hdeader .title {
  font-size: 34rpx;
}
.courseDetails .header .hdeader .title .img-box {
  font-size: 22rpx;
  text-align: center;
  color: #666666;
}
.courseDetails .header .hdeader .title .img-box .imgSty {
  width: 30rpx;
  height: 27rpx;
}
.courseDetails .header .hdeader .desc {
  font-size: 26rpx;
  color: #666666;
  margin: 10rpx auto;
}
.courseDetails .header .hdeader .bdSty {
  font-size: 34rpx;
  color: #B7945D;
}
.courseDetails .header .hdeader .bdSty .text {
  font-size: 22rpx;
  color: #666666;
}

