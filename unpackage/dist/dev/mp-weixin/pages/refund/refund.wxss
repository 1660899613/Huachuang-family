.wrap .p-list {
  width: 100%;
  border-bottom: solid 1rpx #eee;
  padding: 20rpx;
  box-sizing: border-box;
}
.wrap .p-list .title {
  color: #333333;
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx;
  padding-top: 0;
}
.wrap .p-list .row {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.wrap .p-list .row .left {
  width: 65rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}
.wrap .p-list .row .left image {
  width: 80rpx;
  height: 80rpx;
}
.wrap .p-list .row .center {
  width: 100%;
  font-size: 30rpx;
  text-align: left;
  color: #333;
}
.wrap .p-list .row .right {
  width: 80rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: flex-end;
}
.wrap .list .li {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.wrap .list .li .btn {
  width: 700rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background: #1370F7;
  border-radius: 15rpx;
  text-align: center;
  margin: 20rpx auto;
}
.wrap .list .li-1 .th {
  font-size: 24rpx;
  color: #666666;
}
.wrap .list .li-1 .td {
  justify-content: space-between;
  font-size: 30rpx;
}
.wrap .list .li-2 .row, .wrap .list .li-3 .row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.wrap .list .li-2 .row .dian, .wrap .list .li-3 .row .dian {
  color: #DD524D;
}
.wrap .list .li-2 .row .desc, .wrap .list .li-3 .row .desc {
  padding: 20rpx 0;
}
.wrap .list .li-2 .row .left, .wrap .list .li-3 .row .left {
  width: 65rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}
.wrap .list .li-2 .row .left image, .wrap .list .li-3 .row .left image {
  width: 80rpx;
  height: 80rpx;
}
.wrap .list .li-2 .row .center, .wrap .list .li-3 .row .center {
  width: 100%;
  font-size: 30rpx;
  text-align: left;
  color: #333;
}
.wrap .list .li-2 .row .right, .wrap .list .li-3 .row .right {
  width: 80rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: flex-end;
}
.wrap .list .li-2 .row, .wrap .list .li-3 .row {
  justify-content: space-between;
}
.wrap .list .li-2 view, .wrap .list .li-3 view {
  display: flex;
}
.wrap .list .li-2 .input, .wrap .list .li-3 .input {
  text-align: right;
}
.wrap .list .li-2 .input input, .wrap .list .li-3 .input input {
  width: 100%;
}
.wrap .list .li-4 {
  background: none;
}
.wrap .list .li-3 .row:last-child {
  border-bottom: 0;
}

