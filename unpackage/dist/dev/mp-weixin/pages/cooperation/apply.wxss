page {
  background-color: #f5f5f5;
}
.wrap_apply {
  padding-bottom: 110rpx;
}
.wrap_apply .ruler {
  padding: 20rpx;
}
.wrap_apply .ruler .ruler_title {
  padding: 30rpx 0;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #090925;
}
.wrap_apply .ruler .ruler_content {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 20rpx;
}
.wrap_apply .content .ul {
  background-color: #fff;
}
.wrap_apply .content .ul .li {
  background-color: white;
}
.wrap_apply .content .ul .li .th {
  font-size: 30rpx;
}
.wrap_apply .content .ul .li .addInfor {
  color: #CBA668;
  font-size: 26rpx;
  padding: 20rpx 0;
  text-align: center;
}
.wrap_apply .content .ul .li .row1 {
  background-color: #fff;
}
.wrap_apply .content .ul .li .row1 .row {
  justify-content: space-between;
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: solid 1rpx #eee;
  background-color: #fff;
}
.wrap_apply .content .ul .li .row1 view {
  display: flex;
}
.wrap_apply .content .ul .li .row1 .input {
  text-align: right;
}
.wrap_apply .content .ul .li .row1 .input input {
  width: 100%;
}
.wrap_apply .btn {
  width: 700rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #106DF7;
  border-radius: 15rpx;
  color: #fff;
  text-align: center;
}
.wrap_apply .addBtn {
  position: fixed;
  bottom: 30rpx;
  left: 25rpx;
}

